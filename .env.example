# ===========================================
# FoodFinder.AI — Environment Variables
# Copy this file to .env and fill in real values.
# ===========================================

# ---- Gemini (ingredient extraction) ----
GEMINI_API_KEY=your-gemini-api-key-here

# ---- ElevenLabs (text-to-speech) ----
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# ---- Supabase (database + auth) ----
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here
# Required for profile save — service role key bypasses RLS
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
# Required for JWT verification (user profile routes). Find in Supabase: Project Settings → API → JWT Secret
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here

# ---- Backend server ----
# Host and port for uvicorn (defaults shown)
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ---- Frontend ----
# The URL the frontend uses to call the backend API
VITE_API_URL=http://localhost:8000

# Supabase credentials for frontend auth (same values as above, VITE_ prefix for Vite)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here
